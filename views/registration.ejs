<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Short URL Maker</title>
    <link rel="stylesheet" href="/css/registration.css">
</head>
<body>
    <nav>
        <ul>
            <li><a href="/">Short URL</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/registration">Registration</a></li>
        </ul>
    </nav>

    <form class="login" action="<%= baseUrl %>/api/v1/auth/registration" method="post">
        <h1 class="h1">Registration</h1>

        <!-- Display Errors -->
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="error-box">
                <% errors.forEach(function(error) { %>
                    <p class="error-message"><%= error %></p>
                <% }) %>
            </div>
        <% } %>

        <input class="log-pass" required placeholder="Full Name" id="fullName" name="fullName" type="text">
        <input class="log-email" placeholder="Email" id="email" name="email" type="text">
        <input class="log-pass" required placeholder="Password" id="password" name="password" type="password">
        <input value="Registration" class="log-btn" type="submit">

        <p class="signup-text">Already have an account? <a href="/login">Login here</a></p>
    </form>

    <footer>
        &copy; 2025 Short URL Maker. All rights reserved.
    </footer>
</body>
</html>

